<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@+id/navigation_recyclerview">

    <activity
        android:id="@+id/navigation_recyclerview"
        android:name="activities.RecyclerViewActivity"
        android:label="navigation_recyclerview"
        tools:layout="@layout/activity_view_courses_list" />
    <activity
        android:id="@+id/navigation_mycourses"
        android:name="activities.MyCourses"
        android:label="activity_mycourses"
        tools:layout="@layout/fragment_mycourses"/>
    <activity
        android:id="@+id/navigation_searcher"
        android:name="activities.Searcher"
        android:label="navigation_searcher"
        tools:layout="@layout/activity_searcher"/>
</navigation>