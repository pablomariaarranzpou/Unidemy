<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="598dp"
    android:layout_margin="8dp"
    tools:context=".ui.ViewCourse"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/course_layout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/course_image"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            app:srcCompat="@android:drawable/ic_media_play" />

        <TextView
            android:id="@+id/ind_course_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Aquí aparece el título del curso!"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ind_owner"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:text="Nombre Creador" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="63dp"
                android:layout_height="19dp"
                android:layout_weight="1"
                android:scaleX="1"
                android:scaleY="1"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <TextView
                android:id="@+id/ind_course_rating"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:text="Rating: 5/5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ind_course_views"
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1 Views"
                tools:ignore="DuplicateIds" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ind_course_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEXTO TEXTO TEXTO TEXTO TEXTO TEXTOTEXTO TEXTO TEXTO TEXTO TEXTO TEXTOTEXTO TEXTO TEXTO TEXTO TEXTO TEXTOTEXTO TEXTO TEXTO TEXTO TEXTO TEXTO" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ind_btn_pagar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:text="15.99"
                app:iconTint="#FFC107"
                app:rippleColor="#FF9800" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
