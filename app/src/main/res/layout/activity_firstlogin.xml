<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@+id/textoBienvenida"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_unidemy_v3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp" />

    <TextView
        android:id="@+id/textoBienvenida"
        android:layout_width="438dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="¡Bienvenido a Unidemy!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="-14dp"
        tools:layout_editor_absoluteY="308dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:text="Vemos que es la primera vez que nos visitas..."
        android:textAlignment="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="427dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="11dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Ahora realizaremos un test para encontrar los mejores cursos que se adapten a tus necesidades!!"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="427dp" />

    <Space
        android:layout_width="447dp"
        android:layout_height="55dp" />

    <Button
        android:id="@+id/btn_startTest"
        android:layout_width="254dp"
        android:layout_height="70dp"
        android:backgroundTint="#FF9800"
        android:text="Realizar Test"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="522dp" />

</LinearLayout>