<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    tools:context=".ui.UserInfoActivity">

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="InformaciÃ³n usuario"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="30dp">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/user_reset_email"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="112dp"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:textColorHint="#101010"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.188"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7"></com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/user_info_university"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="184dp"
            android:drawableStart="@drawable/ic_baseline_school_24"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:textColorHint="#101010"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.188"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7"></com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/user_info_faculty"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="264dp"
            android:drawableStart="@drawable/ic_baseline_science_24"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:textColorHint="#101010"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.186"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7"></com.google.android.material.textview.MaterialTextView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/user_info_grade"
            android:layout_width="wrap_content"
            android:layout_height="28dp"

            android:layout_marginStart="40dp"
            android:layout_marginTop="352dp"
            android:drawableStart="@drawable/ic_baseline_work_24"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:textColorHint="#101010"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.186"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7"></com.google.android.material.textview.MaterialTextView>




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>